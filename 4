#include <iostream>

using namespace std;

int main()
{
	setlocale(0, "");
	int i = 0;
	float suma = 0;
	int number = 0;
	 
	cout << "Введите число:" << endl << "(0 - это выход)" << endl;


	do {
		cout << "Число " << i + 1 << "=";
		cin >> number;

		if (number) {
			i++;
			suma += number;
		}
	} while (number);

	cout << "Количество введенных чисел :" << i + 1 << endl;
	cout << "Общяя сумма:" << suma << endl;
	cout << "Среднее арифметическое :" << suma / (i + 1) << endl;

	return 0;
}
